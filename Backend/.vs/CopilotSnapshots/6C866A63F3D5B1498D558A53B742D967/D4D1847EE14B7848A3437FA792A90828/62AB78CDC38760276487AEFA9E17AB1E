using Domain.Entities;
using System;
using System.Collections.Generic;
using System.Threading.Tasks;

namespace Domain.Interfaces
{
    public interface IPagoRepositorio
    {
      Task<Pago> RegistrarAsync(Pago pago);
    Task<Pago?> ObtenerPorPedidoIdAsync(Guid pedidoId);
        Task<IEnumerable<Pago>> ListarAsync();
      Task<IEnumerable<Pago>> ListarPorEstadoAsync(EstadoPago estado);
        Task<IEnumerable<Pago>> ListarPorFechasAsync(DateTime fechaInicio, DateTime fechaFin);
        Task<IEnumerable<Pago>> ListarPagosRealizadosAsync();
    }
}
