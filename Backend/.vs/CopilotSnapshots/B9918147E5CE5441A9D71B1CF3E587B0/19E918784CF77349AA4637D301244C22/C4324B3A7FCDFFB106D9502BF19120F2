using Domain.Entities;
using System.Collections.Generic;
using System.Threading.Tasks;
using System;

namespace Domain.Interfaces
{
 public interface IInventarioRepositorio
 {
 Task<Inventario?> ObtenerPorProductoIdAsync(int productoId);
 Task<Inventario?> ObtenerPorIdAsync(Guid id);
 Task<Inventario> CrearAsync(Inventario inv);
 Task ActualizarAsync(Inventario inv);
 Task<IEnumerable<Inventario>> ListarAsync();
 }
}
